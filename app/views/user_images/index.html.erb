<p id="notice"><%= notice %></p>

<h1>User Images</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>View count</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_images.each do |user_image| %>
      <tr>
        <td><%= image_tag(user_image.image.url, alt: 'Image', class: image_classname(user_image.view_count), size: "50x50") %></td>
        <td><%= link_to 'Show', user_image %></td>
        <td><%= link_to 'Edit', edit_user_image_path(user_image) %></td>
        <td><%= link_to 'Destroy', user_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Image', new_user_image_path %>
